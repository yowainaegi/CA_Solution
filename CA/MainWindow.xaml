<Window x:Class="CA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CA"
        mc:Ignorable="d"
        Title="MainWindow" Height="670" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="1" Text="WelCome to use DayZ Mod Setup Tool" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>

        <Button Style="{StaticResource PrimaryLarge}"  Grid.Row="2" Content="Start"></Button>
    </Grid>
</Window>
